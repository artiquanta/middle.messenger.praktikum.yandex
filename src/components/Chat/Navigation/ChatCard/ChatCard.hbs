<li class="chat-card{{#if isActive}} chat-card_selected{{/if}}">
  <img src="{{avatar}}" alt="{{title}}." class="chat-card__avatar">
  <div class="chat-card__info">
    <h2 class="chat-card__username">{{title}}</h2>
    {{#if lastMessage.content}}
    <div class="chat-card__message-container">
      {{#if owner}}
      <p class="chat-card__sender">Вы:</p>
      {{/if}}
      <p class="chat-card__last-message">{{lastMessage.content}}</p>
    </div>
  </div>
  <div class="chat-card__notification">
    <p class="chat-card__time">{{time}}</p>
    {{#unless owner}}
    <div class="chat-card__counter">
      <p class="chat-card__count">{{unreadCount}}</p>
    </div>
    {{/unless}}
  </div>
  {{/if}}
</li>
